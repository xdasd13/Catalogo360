<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Panel de Administración</title>

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

  <!-- Icons -->
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

  <!-- Tailwind CSS (CDN for development) -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Custom Dashboard CSS -->
  <link rel="stylesheet" href="/assets/css/dashboard.css">
</head>

<body class="bg-app-gray font-sans antialiased overflow-hidden">

  <div class="flex h-screen">

    <%- include('Layouts/sidebar') %>

      <!-- Main Content -->
      <div id="mainContent" class="flex-1 flex flex-col min-w-0">

        <%- include('Layouts/navbar') %>

          <!-- Scrollable Content -->
          <main class="flex-1 overflow-x-hidden overflow-y-auto p-6 md:p-8">

            <!-- Stats Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
              <!-- Stat Card 1 -->
              <div
                class="bg-white p-6 rounded-xl shadow-card hover-scale border border-transparent hover:border-app-border transition-all">
                <div class="flex items-center justify-between mb-4">
                  <div class="p-3 rounded-lg bg-blue-50 text-blue-600">
                    <i class='bx bx-dollar-circle text-2xl'></i>
                  </div>
                  <span class="text-xs font-semibold text-green-500 bg-green-50 px-2 py-1 rounded-full">+12.5%</span>
                </div>
                <h3 class="text-gray-500 text-sm font-medium">Ingresos Totales</h3>
                <p class="text-2xl font-bold text-app-deep mt-1">$54,230</p>
              </div>

              <!-- Stat Card 2 -->
              <div
                class="bg-white p-6 rounded-xl shadow-card hover-scale border border-transparent hover:border-app-border transition-all">
                <div class="flex items-center justify-between mb-4">
                  <div class="p-3 rounded-lg bg-purple-50 text-purple-600">
                    <i class='bx bx-shopping-bag text-2xl'></i>
                  </div>
                  <span class="text-xs font-semibold text-green-500 bg-green-50 px-2 py-1 rounded-full">+8.2%</span>
                </div>
                <h3 class="text-gray-500 text-sm font-medium">Ventas</h3>
                <p class="text-2xl font-bold text-app-deep mt-1">1,245</p>
              </div>

              <!-- Stat Card 3 -->
              <div
                class="bg-white p-6 rounded-xl shadow-card hover-scale border border-transparent hover:border-app-border transition-all">
                <div class="flex items-center justify-between mb-4">
                  <div class="p-3 rounded-lg bg-orange-50 text-orange-600">
                    <i class='bx bx-user text-2xl'></i>
                  </div>
                  <span class="text-xs font-semibold text-red-500 bg-red-50 px-2 py-1 rounded-full">-2.1%</span>
                </div>
                <h3 class="text-gray-500 text-sm font-medium">Nuevos Clientes</h3>
                <p class="text-2xl font-bold text-app-deep mt-1">342</p>
              </div>

              <!-- Stat Card 4 -->
              <div
                class="bg-white p-6 rounded-xl shadow-card hover-scale border border-transparent hover:border-app-border transition-all">
                <div class="flex items-center justify-between mb-4">
                  <div class="p-3 rounded-lg bg-teal-50 text-app-green">
                    <i class='bx bx-line-chart text-2xl'></i>
                  </div>
                  <span class="text-xs font-semibold text-green-500 bg-green-50 px-2 py-1 rounded-full">+4.3%</span>
                </div>
                <h3 class="text-gray-500 text-sm font-medium">Tasa de Conversión</h3>
                <p class="text-2xl font-bold text-app-deep mt-1">3.24%</p>
              </div>
            </div>

            <!-- Charts Section (Placeholder) -->
            <div class="bg-white p-6 rounded-xl shadow-card mb-8 border border-gray-100">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-lg font-bold text-app-deep">Rendimiento de Ventas</h2>
                <select
                  class="text-sm border-gray-200 rounded-lg text-gray-500 focus:ring-app-green focus:border-app-green">
                  <option>Últimos 7 días</option>
                  <option>Este Mes</option>
                  <option>Este Año</option>
                </select>
              </div>
              <!-- Placeholder for Chart -->
              <div
                class="h-64 bg-gray-50 rounded-lg border border-dashed border-gray-300 flex items-center justify-center relative overflow-hidden group">
                <div
                  class="absolute inset-0 bg-gradient-to-r from-transparent via-white/50 to-transparent translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-1000">
                </div>
                <div class="text-center">
                  <i class='bx bx-bar-chart-alt text-4xl text-gray-300 mb-2'></i>
                  <p class="text-gray-400 text-sm">Gráfico de Ventas (Placeholder)</p>
                  <p class="text-gray-300 text-xs mt-1">Aquí se renderizaría Chart.js o ApexCharts</p>
                </div>
              </div>
            </div>

            <!-- Recent Records Table -->
            <div class="bg-white rounded-xl shadow-card border border-gray-100 overflow-hidden">
              <div class="p-6 border-b border-gray-100 flex items-center justify-between">
                <h2 class="text-lg font-bold text-app-deep">Últimos Pedidos</h2>
                <button class="text-sm text-app-green font-medium hover:text-app-green-dark transition-colors">Ver
                  todo</button>
              </div>
              <div class="table-container">
                <table class="w-full text-left custom-table">
                  <thead>
                    <tr>
                      <th class="px-6 py-4">ID Pedido</th>
                      <th class="px-6 py-4">Cliente</th>
                      <th class="px-6 py-4">Fecha</th>
                      <th class="px-6 py-4">Estado</th>
                      <th class="px-6 py-4">Total</th>
                      <th class="px-6 py-4 text-right">Acciones</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-100">
                    <tr class="hover:bg-gray-50 transition-colors">
                      <td class="px-6 py-4 font-medium">#ORD-001</td>
                      <td class="px-6 py-4">
                        <div class="flex items-center gap-3">
                          <div
                            class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center text-xs font-bold text-gray-600">
                            JM</div>
                          <span class="text-sm">Juan Martinez</span>
                        </div>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-500">24 Nov, 2023</td>
                      <td class="px-6 py-4">
                        <span
                          class="px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-700">Completado</span>
                      </td>
                      <td class="px-6 py-4 font-medium">$120.50</td>
                      <td class="px-6 py-4 text-right">
                        <button class="text-gray-400 hover:text-app-green transition-colors"><i
                            class='bx bx-edit-alt text-lg'></i></button>
                      </td>
                    </tr>
                    <tr class="hover:bg-gray-50 transition-colors">
                      <td class="px-6 py-4 font-medium">#ORD-002</td>
                      <td class="px-6 py-4">
                        <div class="flex items-center gap-3">
                          <div
                            class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center text-xs font-bold text-gray-600">
                            AL</div>
                          <span class="text-sm">Ana Lopez</span>
                        </div>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-500">23 Nov, 2023</td>
                      <td class="px-6 py-4">
                        <span
                          class="px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-700">Pendiente</span>
                      </td>
                      <td class="px-6 py-4 font-medium">$85.00</td>
                      <td class="px-6 py-4 text-right">
                        <button class="text-gray-400 hover:text-app-green transition-colors"><i
                            class='bx bx-edit-alt text-lg'></i></button>
                      </td>
                    </tr>
                    <tr class="hover:bg-gray-50 transition-colors">
                      <td class="px-6 py-4 font-medium">#ORD-003</td>
                      <td class="px-6 py-4">
                        <div class="flex items-center gap-3">
                          <div
                            class="w-8 h-8 rounded-full bg-gray-200 flex items-center justify-center text-xs font-bold text-gray-600">
                            CR</div>
                          <span class="text-sm">Carlos Ruiz</span>
                        </div>
                      </td>
                      <td class="px-6 py-4 text-sm text-gray-500">23 Nov, 2023</td>
                      <td class="px-6 py-4">
                        <span
                          class="px-3 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-700">Enviado</span>
                      </td>
                      <td class="px-6 py-4 font-medium">$230.00</td>
                      <td class="px-6 py-4 text-right">
                        <button class="text-gray-400 hover:text-app-green transition-colors"><i
                            class='bx bx-edit-alt text-lg'></i></button>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>

          </main>
      </div>
  </div>

  <!-- Dashboard Logic -->
  <script src="/assets/js/dashboard.js"></script>
</body>

</html>