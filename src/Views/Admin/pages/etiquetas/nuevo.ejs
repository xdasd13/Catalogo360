<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nueva Etiqueta - Panel de Administraci칩n</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/assets/css/dashboard.css">
    <link rel="stylesheet" href="/assets/css/crear.css">
</head>

<body class="bg-app-gray font-sans antialiased overflow-hidden">
    <div class="flex h-screen">
        <%- include('../../Layouts/sidebar') %>
            <div id="mainContent" class="flex-1 flex flex-col min-w-0">
                <%- include('../../Layouts/navbar') %>
                    <main class="flex-1 overflow-x-hidden overflow-y-auto p-6 md:p-8">

                        <div class="form-container">
                            <div class="form-header">
                                <h1 class="form-title">Nueva Etiqueta</h1>
                                <p class="form-subtitle">Complete los datos para crear una nueva etiqueta</p>
                            </div>

                            <% if (error && error.length> 0) { %>
                                <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
                                    <p class="text-red-800 text-sm">
                                        <%= error %>
                                    </p>
                                </div>
                                <% } %>

                                    <form action="/admin/etiquetas" method="POST" data-validate="true">

                                        <div class="form-grid form-grid-cols-2">
                                            <div class="form-group">
                                                <label class="form-label form-label-required" for="nombre">Nombre de la
                                                    Etiqueta</label>
                                                <input type="text" id="nombre" name="nombre" class="form-input" required
                                                    placeholder="Ej: Oferta">
                                                <span class="form-help-text">Nombre de la etiqueta</span>
                                            </div>

                                            <div class="form-group">
                                                <label class="form-label form-label-required" for="color">Color</label>
                                                <div class="flex items-center gap-3">
                                                    <input type="color" id="color" name="color" value="#348e91" required
                                                        class="h-12 w-16 rounded border border-app-border cursor-pointer">
                                                    <input type="text" id="color-text" class="form-input flex-1"
                                                        value="#348e91" placeholder="#348e91"
                                                        pattern="^#[0-9A-Fa-f]{6}$">
                                                </div>
                                                <span class="form-help-text">Color identificador de la etiqueta</span>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label" for="slug">Slug (URL amigable)</label>
                                            <input type="text" id="slug" name="slug" class="form-input"
                                                placeholder="Se genera autom치ticamente">
                                            <span class="form-help-text">Se genera desde el nombre</span>
                                        </div>

                                        <div class="form-group">
                                            <label class="form-label" for="descripcion">Descripci칩n</label>
                                            <textarea id="descripcion" name="descripcion" class="form-textarea" rows="3"
                                                maxlength="255" placeholder="Descripci칩n de la etiqueta..."></textarea>
                                        </div>

                                        <div class="form-actions">
                                            <a href="/admin/etiquetas" class="btn btn-secondary">
                                                <i class='bx bx-x'></i>
                                                Cancelar
                                            </a>
                                            <button type="submit" class="btn btn-primary">
                                                <i class='bx bx-check'></i>
                                                Crear Etiqueta
                                            </button>
                                        </div>
                                    </form>
                        </div>

                    </main>
            </div>
    </div>
    <script src="/assets/js/dashboard.js"></script>
    <script src="/assets/js/crear.js"></script>
    <script>
        // Sincronizar color picker con input de texto
        const colorPicker = document.getElementById('color');
        const colorText = document.getElementById('color-text');

        colorPicker.addEventListener('input', (e) => {
            colorText.value = e.target.value;
        });

        colorText.addEventListener('input', (e) => {
            if (/^#[0-9A-Fa-f]{6}$/.test(e.target.value)) {
                colorPicker.value = e.target.value;
            }
        });
    </script>
</body>

</html>