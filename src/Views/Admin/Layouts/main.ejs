<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Panel de Administración' %> - Catálogo360</title>
    <link rel="stylesheet" href="/assets/css/tailwind.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="https://code.iconify.design/iconify-icon/2.1.0/iconify-icon.min.js"></script>
    <style>
        [x-cloak] { display: none !important; }
        .sidebar-active { @apply bg-blue-900 border-l-4 border-blue-500; }
        .nav-link-active { @apply text-blue-600 font-semibold; }
    </style>
</head>
<body class="bg-gray-50 text-gray-900">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-gray-900 text-white fixed h-full overflow-y-auto">
            <div class="p-6 border-b border-gray-800">
                <h1 class="text-xl font-bold">Catálogo360</h1>
                <p class="text-xs text-gray-400 mt-1">Panel Admin</p>
            </div>

            <nav class="mt-8">
                <div class="px-4 space-y-2">
                    <!-- Dashboard -->
                    <a href="/admin" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors <% if (currentPage === 'dashboard') { %>sidebar-active<% } %>">
                        <iconify-icon icon="solar:chart-2-bold" width="20"></iconify-icon>
                        <span>Dashboard</span>
                    </a>

                    <!-- Catálogo -->
                    <div class="mt-6 mb-4">
                        <p class="text-xs font-semibold text-gray-500 uppercase px-4 mb-2">Catálogo</p>
                        
                        <a href="/admin/productos" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors <% if (currentPage === 'productos') { %>sidebar-active<% } %>">
                            <iconify-icon icon="solar:box-bold" width="20"></iconify-icon>
                            <span>Productos</span>
                        </a>

                        <a href="/admin/categorias" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors <% if (currentPage === 'categorias') { %>sidebar-active<% } %>">
                            <iconify-icon icon="solar:folder-bold" width="20"></iconify-icon>
                            <span>Categorías</span>
                        </a>

                        <a href="/admin/marcas" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors <% if (currentPage === 'marcas') { %>sidebar-active<% } %>">
                            <iconify-icon icon="solar:tag-bold" width="20"></iconify-icon>
                            <span>Marcas</span>
                        </a>

                        <a href="/admin/etiquetas" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors <% if (currentPage === 'etiquetas') { %>sidebar-active<% } %>">
                            <iconify-icon icon="solar:bookmark-bold" width="20"></iconify-icon>
                            <span>Etiquetas</span>
                        </a>
                    </div>

                    <!-- Inventario -->
                    <div class="mt-6 mb-4">
                        <p class="text-xs font-semibold text-gray-500 uppercase px-4 mb-2">Inventario</p>
                        
                        <a href="/admin/stock" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors <% if (currentPage === 'stock') { %>sidebar-active<% } %>">
                            <iconify-icon icon="solar:package-bold" width="20"></iconify-icon>
                            <span>Stock</span>
                        </a>

                        <a href="/admin/variantes" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors <% if (currentPage === 'variantes') { %>sidebar-active<% } %>">
                            <iconify-icon icon="solar:layers-bold" width="20"></iconify-icon>
                            <span>Variantes</span>
                        </a>
                    </div>

                    <!-- Contenido -->
                    <div class="mt-6 mb-4">
                        <p class="text-xs font-semibold text-gray-500 uppercase px-4 mb-2">Contenido</p>
                        
                        <a href="/admin/media" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors <% if (currentPage === 'media') { %>sidebar-active<% } %>">
                            <iconify-icon icon="solar:gallery-bold" width="20"></iconify-icon>
                            <span>Galería</span>
                        </a>

                        <a href="/admin/seo" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors <% if (currentPage === 'seo') { %>sidebar-active<% } %>">
                            <iconify-icon icon="solar:search-bold" width="20"></iconify-icon>
                            <span>SEO</span>
                        </a>
                    </div>

                    <!-- Sistema -->
                    <div class="mt-6 mb-4">
                        <p class="text-xs font-semibold text-gray-500 uppercase px-4 mb-2">Sistema</p>
                        
                        <a href="/admin/usuarios" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors <% if (currentPage === 'usuarios') { %>sidebar-active<% } %>">
                            <iconify-icon icon="solar:users-group-bold" width="20"></iconify-icon>
                            <span>Usuarios</span>
                        </a>

                        <a href="/admin/config" class="flex items-center gap-3 px-4 py-3 rounded-lg hover:bg-gray-800 transition-colors <% if (currentPage === 'config') { %>sidebar-active<% } %>">
                            <iconify-icon icon="solar:settings-bold" width="20"></iconify-icon>
                            <span>Configuración</span>
                        </a>
                    </div>
                </div>
            </nav>

            <!-- Footer del Sidebar -->
            <div class="absolute bottom-0 left-0 right-0 p-4 border-t border-gray-800">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium"><%= admin.nombre %></p>
                        <p class="text-xs text-gray-400"><%= admin.email %></p>
                    </div>
                </div>
                <a href="/auth/logout" class="mt-3 flex items-center gap-2 px-4 py-2 bg-red-600 rounded-lg hover:bg-red-700 text-white text-sm w-full justify-center transition-colors">
                    <iconify-icon icon="solar:logout-2-bold" width="16"></iconify-icon>
                    Salir
                </a>
            </div>
        </aside>

        <!-- Main Content -->
        <main class="flex-1 ml-64 overflow-auto">
            <!-- Top Bar -->
            <div class="bg-white border-b border-gray-200 sticky top-0 z-10">
                <div class="px-8 py-4 flex justify-between items-center">
                    <h1 class="text-2xl font-bold text-gray-900"><%= title || 'Dashboard' %></h1>
                    <div class="flex items-center gap-4">
                        <a href="/" class="text-sm text-gray-600 hover:text-gray-900 transition-colors">Ver sitio</a>
                    </div>
                </div>
            </div>

            <!-- Flash Messages -->
            <% if (messages && messages.success) { %>
                <div class="mx-8 mt-6 p-4 bg-green-50 border border-green-200 rounded-lg flex items-center gap-3">
                    <iconify-icon icon="solar:check-circle-bold" width="20" class="text-green-600"></iconify-icon>
                    <span class="text-green-800"><%= messages.success %></span>
                </div>
            <% } %>

            <% if (messages && messages.error) { %>
                <div class="mx-8 mt-6 p-4 bg-red-50 border border-red-200 rounded-lg flex items-center gap-3">
                    <iconify-icon icon="solar:close-circle-bold" width="20" class="text-red-600"></iconify-icon>
                    <span class="text-red-800"><%= messages.error %></span>
                </div>
            <% } %>

            <!-- Page Content -->
            <div class="p-8">
                <%- body %>
            </div>
        </main>
    </div>

    <script src="https://cdn.tailwindcss.com"></script>
</body>
</html>
